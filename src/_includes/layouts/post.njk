{% extends 'layouts/base.njk' %}

{% block content %}

<main class="row padding-x-3 post">
	<article class="col-s-12">
		<header class="post-header margin-bottom-3">
			<h1 class="margin-x-0">{{ title }}</h2>
			{% postTags tags %}
		</header>

		{% if image %}
		<img src="{{ image }}?nf_resize=fit&w=1200" class="post-featured-image" />
		{% endif %}

		{{ content | safe }}

		{% if images %}
			<div class="post-image-gallery">
				{% for img in images %}
					<img src="{{ img.image }}?nf_resize=fit&w=600" alt="{{img.alt}}" />
				{% endfor %}
			</div>
		{% endif %}

	</article>
</main>

{% endblock %}